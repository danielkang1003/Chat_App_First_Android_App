<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

<!--        editText: input post title-->
        <EditText
            android:id="@+id/EtpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editextstyle"
            android:padding="10dp"
            android:hint="제목 입력"
            android:textAlignment="center"
            android:singleLine="true"/>
<!--        ImageView: input post image-->
        <ImageView
            android:id="@+id/IvpImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appThemePrimary"
            android:minHeight="200dp"/>

<!--        EditText: input post description-->
        <EditText
            android:id="@+id/EtpDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editextstyle"
            android:padding="10dp"
            android:hint="설명 입력"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="120dp"
            android:textAlignment="center"/>
<!--        button: publish post to firebase-->
        <Button
            android:id="@+id/BtnpUpload"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="올리기"
            />

    </LinearLayout>

</ScrollView>